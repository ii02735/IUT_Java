package structure;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import factory.L_EtudiantFactory;
import factory.M_EtudiantFactory;

public class Universitetest {
	
	private Universite u;
	
	@Before
	public void init()
	{
		this.u = new Universite("IUT Paris Descartes", new L_EtudiantFactory());
	}
	@Test
	public void ajout() {
		this.u.ajouterEtu("L1", "Barnabé");
		this.u.ajouterEtu("L2", "Yadallee");
		this.u.ajouterEtu("L1", "Edouard");
		this.u.setFabrique(new M_EtudiantFactory());
		this.u.ajouterEtu("M1", "Richard");
		this.u.ajouterEtu("M2", "Philippe");
		assertNotEquals(this.u.getListe().size(),3);
		
		System.out.println(this.u.afficherListe());
	}

}
