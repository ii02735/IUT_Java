package test;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import bridge.ICalcul;
import bridge.Maison;
import calcul.CalculTaxe;

public class MaisonTest {
	
	private ICalcul taxe;
	private Maison v1;
	private Maison v2;
	
	@Before
	public void init()
	{
		this.taxe = new CalculTaxe();
		v1 = new Maison(100,1500);
		v2 = new Maison(60,900);
	}
	
	@Test
	public void test() {
		v1.choisirCalcul(taxe);
		assertEquals(3000, v1.getMontant());
	}
	
	@Test
	public void testValLocative(){
		v2.choisirCalcul(taxe);
		assertEquals(0,v2.getMontant());
	}
}
